{
  "name": "react-twitch-streamers",
  "version": "0.0.1",
  "description": "React web app for displaying twitch streamers with the usage of Twitch API",
  "private": true,
  "author": "John Darryl Pelingo <johndarrylpelingo@gmail.com> (https://github.com/john-d-pelingo)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/john-d-pelingo/react-twitch-streamers.git"
  },
  "bugs": {
    "url": "https://github.com/john-d-pelingo/react-twitch-streamers/issues"
  },
  "old-scripts": {
    "prebuild:ci": "run-s sweep test:c",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "test:c": "cross-env CI=true react-scripts test --env=jsdom --coverage",
    "w:test": "cross-env react-scripts test --env=jsdom --no-cache --verbose"
  },
  "scripts": {
    "build": "cross-env react-scripts build",
    "build:ci": "cross-env react-scripts build",
    "eject": "cross-env react-scripts eject",
    "husky:pre-push": "run-s pretty lint test:ci",
    "lint": "eslint .",
    "nuke": "rimraf node_modules yarn.lock && yarn install",
    "prebuild": "run-s sweep pretty lint test:ci",
    "prebuild:ci": "run-s sweep test:ci",
    "pretty": "prettier --write --config .prettierrc 'src/**/*.{js,jsx,css}'",
    "serve": "serve -so build -p 8080",
    "start": "cross-env react-scripts start",
    "sweep": "rimraf build coverage",
    "test": "cypress run",
    "test:ci": "run-p --race start test",
    "w:test": "cypress open"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "emotion": "^9.1.3",
    "lodash": "^4.17.10",
    "param-case": "^2.1.1",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-emotion": "^9.1.3",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "cross-env": "^5.1.3",
    "cypress": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-cypress": "^2.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.15.0-rc.13",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "react-scripts": "1.1.4",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "serve": "^6.4.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/*.js",
      "!src/features/*.js",
      "!src/utilities/test-utils.js",
      "!<rootDir>/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run husky:pre-push"
    }
  }
}
